<div class="container">
    <h2>shopping cart summary:</h2>
    <hr />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ProductId</th>
                <th>Selected Amount</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Order.Items)
            {
                <tr>
                    <td>@item.productId</td>
                    <td>@item.Amount</td>
                    <td>@item.productprice</td>
                    <td>@item.Totalprice</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3"></td>
                <td class="text-right">Total:@Model.OrderTotal</td>

            </tr>
        </tfoot>



    </table>

    <a style="float: right; " class="btn btn-success" asp-controller="Home" asp-action="" asp-route-prodId="@Model.Order">Invoke</a>
</div>
